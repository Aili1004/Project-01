
<div class="basic-grey">
	<h1>Restaurant User Login</h1>
</div>

<div class="basic-grey">
	<%= form_tag '/restaurant_login' do %>
		<p>
			<%= label_tag :email %>
			<%= text_field_tag :email %>
		</p>

		<p>
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</p>

		<p>
			<%= label_tag :license_number %>
			<%= text_field_tag :license_number %>
		</p>

		<p>
			<div class="button">
				<%= submit_tag 'Login to RateIT' %>
			</div>
		</p>

	<% end %>
</div>
<%= link_to "Don't have an account? Click here to sign up! ", new_restaurant_user_path, :class => "click-to-signup" %>