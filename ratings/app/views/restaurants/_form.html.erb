
<%= form_for @restaurant do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.label :address %>
		<%= f.text_field :address %>
	</p>
	
	<p>
		<%= f.label :opening_hours %>
		<%= f.text_field :opening_hours %>
	</p>


	
	<p>
		<%= res.label :image %>
		<%= res.url_field :image %>
	</p>


	<!-- <p>
		<% f.fields_for :restaurants do |res| %>
			<p>
				<%= res.label :image %>
				<%= res.url_field :image %>
			</p>
		<% end -%>
	</p> -->



	<p>
		<%= f.label :popular_food %>
		<%= f.text_field :popular_food %>
	</p>
	
	<p>
		<label>Restaurant Owner</label>
		<%= f.select :restaurant_user_id, RestaurantUser.all.map { |user| [user.name, user.id] }, :include_blank => true %>
	</p>

	<%= f.submit 'Add Image', :name => "add_image" %>
	<%= f.submit 'Delete checked images', :name => "remove_image" %>

	<div class="form_button">
		<%= f.submit %>
	</div>
	
<% end %>





