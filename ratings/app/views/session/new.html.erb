

<h2>User Login</h2>

<%= form_tag '/login' do %>
	<p>
		<%= label_tag :email %>
		<%= text_field_tag :email %>
	</p>

	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>

	<p>
		<%= submit_tag 'Login to Rate' %>
	</p>
<% end %>


<%= link_to "Don't have an account? Here here to sign up!", new_user_path %>
